<h1>Listing Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<!--LEFT OFF TRYING TO GRAB THE USER TO SEE THE ADMIN STATUS-->
  <tbody>
    <% @books.each do |book| %>
      <% if current_user != nil &&  current_user.admin_status == true%>
          <br />
          <%= link_to 'Add New Book', new_book_path %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.author %></td>
            <td><%= link_to 'Show', book %></td>
            <td><%= link_to 'Edit', edit_book_path(book) %></td>
            <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>

          <% else %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.author %></td>
            <td><%= book.title %></td>
            <td><%= book.author %></td>
            <td><%= link_to 'Show', book %></td>
          </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

