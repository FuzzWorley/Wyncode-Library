<div class="jumbotron no-bottom">
  <div class="container">
    <h1>Library <i class="fa fa-pencil"></i></h1>
    <% if current_user != nil &&  current_user.admin_status == true%>        
    <% @books.each do |book| %>
    <div class = "row">
      <div class ="col-md-2 col-md-offset-2">
        <h3>Picture</h3>
        <%= image_tag book.picture %>
      </div>
      <div class ="col-md-4">
        <h3>Title</h3>
        <h4><%= book.title %></h4>
      </div>
      <div class ="col-md-4">
        <h3>Author</h3>
        <h4><%= book.author %></h4>
      </div>
    </div>
    <div class = "row">
      <div class ="col-md-2 col-md-offset-2">
        <%= link_to 'Show |', book %>
        <%= link_to 'Edit |', edit_book_path(book) %>
        <%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    </div>
    <div class="line"></div>
    <% end %>
    <div class = "center-btn">
      <%= link_to new_book_path do %>
      <button type="submit" class="buttons add-new-btn">Add New Book</button>
      <% end %>
    </div>
    <% else %>
    <% @books.each do |book| %>
    <div class = "row">
      <div class ="col-md-2 col-md-offset-2">
        <h3>Picture</h3>
        <%= image_tag book.picture %>
      </div>
      <div class ="col-md-4">
        <h3>Title</h3>
        <h4><%= book.title %></h4>
      </div>
      <div class ="col-md-4">
        <h3>Author</h3>
        <h4><%= book.author %></h4>
      </div>
    </div>
    <div class = "row">
      <div class ="col-md-2 col-md-offset-2">
        <%= link_to book  do%>
        <button type="submit" class="buttons show-book-btn">Show Book</button>
        <% end %>
      </div>
    </div>
    <div class="line"></div>
    
    <% end %>
  <% end %>

  </div>
</div>
