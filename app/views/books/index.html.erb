<h1>Listing Books</h1>

<% if current_user != nil &&  current_user.admin_status == true%>
  <%= link_to 'Add New Book', new_book_path %>
<table>
  <thead>
    <tr>
      <th>Picture</th>
      <th>Title</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>    
    <% @books.each do |book| %>
      <tr>
        <td><%= image_tag book.picture %></td>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<table>
  <thead>
    <tr>
      <th>Picture</th>
      <th>Title</th>
      <th>Author</th>
    </tr>
  </thead>
  <tbody>    
    <% @books.each do |book| %>
      <tr>
        <td><%= image_tag book.picture %></td>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= link_to 'Show', book %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
